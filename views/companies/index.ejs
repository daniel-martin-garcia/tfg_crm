
<div class="row">
        <h1 class="text-center">
            <a href="/goback"><span class="oi oi-arrow-circle-left h3"></a>

            Fábricas:

            <% if (session.user && session.user.isAdmin) { %>
            <a href="/companies/new"><span class="oi oi-plus h3"></span></a>
            <% } %>

        </h1>
</div>


<table  class='table table-striped table-bordered table-sm'>
    <thead>
    <tr class="table-primary">
        <th scope="col">
            Nombre
        </th>

        <th scope="col">
        </th>
    </tr>
    </thead>

    <tbody>
    <% for (var i in companies) { %> 
        <% var company = companies[i]; %>      

        <tr>
            <td>
                <a href="/companies/<%= company.id %>"> <%= company.name %> </a>
            </td>

            <td>
                <% if (session.user && session.user.isAdmin) { %>
                    <a href="/companies/<%= company.id %>?_method=DELETE"
                       onClick="return confirm('¿Seguro que quiere borrar la fábrica: <%= company.name %>?');"><span class="oi oi-trash h5"></span></a>
                <% } %>
            </td>

        </tr>
    <% } %>
    </tbody>

</table>

