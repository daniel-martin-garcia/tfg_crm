            />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="name">Asunto:</label>
            <input type="text"
                   class="form-control"
                   id="name"
                   name="name"
                   value="<%= subject %>"
                   placeholder="Asunto del email"
                   autocomplete="off"
            />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="name">Cuerpo del email:</label>
            <textarea type="text"
                   class="form-control"
                   id="name"
                   name="name"
                   placeholder="Cuerpo del email"
                   rows="5"><%= body %></textarea>
        </div>
    </div>

