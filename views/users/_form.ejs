<div class="form-row">
    <div class="form-group col">
        <label for="notes">Observaciones:</label>
        <textarea type="text"
                  class="form-control"
                  id="notes"
                  name="notes"
                  placeholder="Observaciones"
                  rows="5"
                <%= customerShowView ? "readonly" : "" %>
        ><%= user.notes %></textarea>
    </div>
</div>


<% if (session.user.isAdmin || session.user.id === user.id) { %>

    <div class="form-row">
        <div class="form-group col">
            <label for="" token">
                Token:
                <% if (customerShowView) { %>
                    <a href="/users/<%= user.id %>/token?_method=PUT"><span class="oi oi-reload ml-5"></span></a>
                    Generar nuevo token
                <% } %>
            </label>
            <input type="text"
                   id="token"
                   class="form-control"
                   value="<%= user.token %>"
                   readonly/>
        </div>
    </div>
<% } %>


<% if (!customerShowView) { %>

<div class="form-group">
    <div class="row">
        <legend class="col-form-legend col">
            Password:
            <% if (!user.id) { %>
            <span class="text-danger">(Introduzca el nuevo password dos veces)</span>
            <% } else { %>
            <span class="text-danger">(Dejar en blanco para no cambiar el password actual)</span>
            <% } %>
        </legend>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <input type="password"
                   class="form-control"
                   id="user_password"
                   name="password"
                   placeholder="Nuevo Password"
                   autocomplete="off"/>
        </div>

        <div class="form-group col-md-6">
            <input type="password"
                   class="form-control"
                   id="user_confirm_password"
                   placeholder="Confirmar Password"
                   autocomplete="off"/>
        </div>
    </div>
</div>

<% } %>



