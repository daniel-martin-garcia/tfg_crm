<script>
    function confirmPassword() {
        var pw1 = document.getElementById('user_password').value;
        var pw2 = document.getElementById('user_confirm_password').value;

        <% if ( !user.id) { %>
        if (!pw1 || !pw2) {
            alert('Debe rellenar los campos de Password y Confirmación.');
            return false;
        }
        <% } %>

        if (pw1 === pw2) {
            return true;
        } else {
            alert('Los passwords introducidos no coinciden.');
            return false;
        }
    }
</script>


<div class="form-row">
    <div class="form-group col">
        <label for="login">Login:</label>
        <input type="text"
               class="form-control"
               id="login"
               name="login"
               value="<%= user.login %>"
               placeholder="Login"
               autocomplete="off"
                <%= !!user.id || customerShowView ? "readonly" : "" %> />
    </div>
</div>



<div class="form-row">
    <div class="form-group col">
        <label for="fullname">Nombre y Apellidos:</label>
        <input type="text"
               class="form-control"
               id="fullname"
               name="fullname"
               value="<%= user.fullname %>"
               placeholder="Nombre"
               autocomplete="off"
                <%= customerShowView ? "readonly" : "" %>
        />
    </div>
</div>


<div class="form-row align-items-center">
    <legend class="col-form-legend col-auto">
        Fotografía:
        <br />
        <% if (user.Photo) { %>
        <img src="<%= user.Photo.url %>" width="200px" />
        <% } else { %>
        <img src="/images/face.png" width="200px" />
        <% } %>
    </legend>

    <% if (!customerShowView) { %>
    <div class="col">
        <div class="form-group">
            <input type="file" class="form-control-file" id="photo" accept="image/*" name="photo">
        </div>

        <% if (!user.isNewRecord) { %>
        <div class="form-group">
            <div class="form-check">
                <label class="form-check-label ml-2" for="keepphoto">
                    <input class="form-check-input"
                           type="checkbox"
                           id="keepphoto"
                           name="keepphoto"
                           value="1"
                           checked>
                    - Mantener fotografía actual.
                </label>
            </div>
        </div>
        <% } %>
    </div>
    <% } %>
</div>

<fieldset class="form-group">
    <div class="row">
        <legend class="col-form-legend col-auto">Roles:</legend>

        <div class="col-auto">

            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input"
                           type="checkbox"
                           name="isAdmin"
                           id="isAdmin"
                           value="1"
                            <%= user.isAdmin ? 'checked' : '' %>
                            <%= session.user && session.user.isAdmin ? '' : 'disabled' %>
                            <%= customerShowView ? "disabled" : "" %>
                    >
                    Administrador
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">

                    <input class="form-check-input"
                           type="checkbox"
                           name="isManager"
                           id="isManager"
                           value="1"
                            <%= user.isManager ? 'checked' : '' %>
                            <%= session.user && session.user.isAdmin ? '' : 'disabled' %>
                            <%= customerShowView ? "disabled" : "" %>
                    >
                   Gestor
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">

                    <input class="form-check-input"
                           type="checkbox"
                           name="isSalesman"
                           id="isSalesman"
                           value="1"
                            <%= user.isSalesman ? 'checked' : '' %>
                            <%= session.user && session.user.isAdmin ? '' : 'disabled' %>
                            <%= customerShowView ? "disabled" : "" %>
                    >
                    Vendedor
                </label>
            </div>

        </div>
    </div>
</fieldset>




